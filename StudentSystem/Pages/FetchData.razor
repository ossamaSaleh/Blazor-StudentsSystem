@page "/fetchdata"
@using StudentSystemServer.Shared;
@inject HttpClient Http

<h1>Students Data</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>FullName</th>
                <th>Mobile</th>
                <th>Parent Mobile</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var student in students)
            {
                <tr>
                    <td>@student.FullName</td>
                    <td>@student.Mobile</td>
                    <td>@student.ParentMobile1</td>
                    
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<StudentProfileDTO> students;
    protected override async Task OnInitializedAsync()
    {
        //Change the localhost:<port> when go to production: 200Ok
        students = await  Http.GetFromJsonAsync<List<StudentProfileDTO>>("https://localhost:44350/api/Students/GetAll");
    }
}
